<% layout('layouts/boilerplate')%>

    <div class="row">
        <h1 class="text-center display-5">Edit Burger</h1>
        <div class="col-6 offset-3">
            <form action="/burgertachi/<%=burger._id%>?_method=PUT" , method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="burger[title]" value="<%=burger.title%>"
                        required>
                    <div class="valid-feedback">Looks nice!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="burger[location]"
                        value="<%=burger.location%>" required>
                    <div class="valid-feedback">Looks nice!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="Price"
                            aria-describedby="price-label" name="burger[price]" value="<%=burger.price%>" required>
                        <div class="valid-feedback">Looks nice!</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Add More Image(s):</label>
                    <input class="form-control" type="file" id="formFileMultiple" name="image" multiple>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea required class="form-control" type="text" id="description"
                        name="burger[description]"><%=burger.description%> </textarea>
                    <div class="valid-feedback">Looks nice!</div>
                </div>


                <% burger.images.forEach(function(img,i) {%>

                    <div class="card mb-3">
                        <div class="card-body">
                            <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                            <label class="form-check-label" for="image-<%=i%> ">Delete Image?</label>
                            <div class="form-check-inline">
                                <input class="form-check-input" type="checkbox" id="image-<%=i%>" name="deleteImages[]"
                                    value="<%=img.filename%>">
                            </div>

                        </div>
                    </div>
                    <% })%>
                        <div class="d-grid gap-2 col-12 mx-auto mt-4 mb-3">
                            <button class="btn primary text-white">Save Burger</button>
                            <a class="btn btn-danger" href="/burgertachi/<%=burger._id%>">Cancel</a>
                        </div>
            </form>
        </div>
    </div>